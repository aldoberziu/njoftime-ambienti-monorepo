{
    "compilerOptions": {
        "target": "es5",
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": false,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "incremental": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve"
    },
    "include": ["frontend/next-env.d.ts", "**/*.ts", "**/*.tsx", "frontend/interfaces.d.ts", "frontend/store/index.js", "frontend/config/backendConfig.js", "backend/backendConfig.js"],
    "exclude": ["node_modules"]
}
